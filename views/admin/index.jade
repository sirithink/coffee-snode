extends ../common/_admin-layout
// block meta

block navbar
    include ../common/_admin-navbar
block content
    .row-fluid
        .span2
            // nav active
            listClass = 'yes'
            include ../common/_admin-sidebar-nav
        .span10
            table.table.table-bordered
                thead
                    tr
                        th id
                        th 标题
                        th 状态
                        th 操作
                tbody
                    - blogs.forEach(function(item){
                        tr
                            td #{item.id}
                            td #{item.title}
                            td 
                                if item.del_status == '0'
                                    span.badge.badge-success 正常
                                if item.del_status == '1'
                                    span.badge.badge-warning 已删
                            td.row
                                a.btn.btn-success.span3(href="/blog/#{item.id}", target="_blank", style="width: 68px;")
                                    i.icon-zoom-in.icon-white
                                    |查看
                                a.btn.btn-info.span3(href="/admin/blog/edit/#{item.id}", style="width: 68px;")
                                    i.icon-edit.icon-white
                                    |编辑
                    - })

block footer
    include ../common/_footer